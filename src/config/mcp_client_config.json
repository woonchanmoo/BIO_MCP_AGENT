{
    "mcpServers": {
        "pubmed-server": {
            "command": "node",
            "args": [
                "${PUBMED_JS}"
            ],
            "env": {
                "NCBI_API_KEY": "${NCBI_API_KEY}",
                "NCBI_EMAIL": "${NCBI_EMAIL}"
            },
            "transport": "stdio"
        },
        "pdb-server": {
            "command": "node",
            "args": [
                "${PDB_JS}"
            ],
            "transport": "stdio"
        },
        "ensembl": {
            "command": "node",
            "args": [
                "${ENSEMBL_JS}"
            ],
            "env": {
                "ENSEMBL_BASE_URL": "https://rest.ensembl.org",
                "REQUEST_TIMEOUT": "30000"
            },
            "transport": "stdio"
        },
        "mcp-python-interpreter": {
            "command": "uvx",
            "args": [
                "mcp-python-interpreter",
                "--dir",
                "${MCP_FILESYSTEM_DIR}",
                "--python-path",
                "${PYTHON_DIR}"
            ],
            "env": {
                "MCP_ALLOW_SYSTEM_ACCESS": "0"
            },
            "transport": "stdio"
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "${MCP_FILESYSTEM_DIR}"
            ],
            "transport": "stdio"
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "transport": "stdio"
        },
        "ddg-search": {
            "command": "uvx",
            "args": [
                "duckduckgo-mcp-server"
            ],
            "transport": "stdio"
        }
    }
}